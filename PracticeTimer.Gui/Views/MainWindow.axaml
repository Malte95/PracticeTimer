<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PracticeTimer.Gui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="PracticeTimer.Gui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="PracticeTimer">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <StackPanel Margin="20"
              Spacing="14"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Width="520">

    <!-- Title -->
    <TextBlock Text="PracticeTimer"
               FontSize="26"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"/>

    <!-- =========================
         (Optional) Presets - disabled for MVP
         ========================= -->
    <!--
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock Text="Preset:" VerticalAlignment="Center"/>
      <ComboBox Width="240"
                ItemsSource="{Binding PresetNames}"
                SelectedItem="{Binding SelectedPresetName}"/>
    </StackPanel>
    -->

    <!-- Add Exercise -->
    <Border Padding="12"
            CornerRadius="10"
            BorderThickness="1">

      <StackPanel Spacing="10">

        <TextBlock Text="Add exercise"
                   FontWeight="SemiBold"/>

        <Grid ColumnDefinitions="*,120,Auto"
              ColumnSpacing="8"
              VerticalAlignment="Center">

          <TextBox Grid.Column="0"
                   Height="36"
                   Watermark="Exercise name (e.g. Chords)"
                   Text="{Binding NewExerciseName, UpdateSourceTrigger=PropertyChanged}"/>

          <TextBox Grid.Column="1"
                   Height="36"
                   Watermark="Minutes"
                   Text="{Binding NewExerciseMinutesText, UpdateSourceTrigger=PropertyChanged}"/>

          <Button Grid.Column="2"
                  Height="36"
                  MinWidth="90"
                  Content="Add"
                  Command="{Binding AddExerciseCommand}"/>
        </Grid>

      </StackPanel>
    </Border>

    <!-- Actions -->
    <Border Padding="12"
            CornerRadius="10"
            BorderThickness="1">

      <Grid ColumnDefinitions="Auto,Auto,Auto,Auto"
            ColumnSpacing="8"
            HorizontalAlignment="Center">

        <Button Grid.Column="0"
                Height="36"
                MinWidth="90"
                Content="Start"
                Command="{Binding StartSessionCommand}"
                IsEnabled="{Binding CanStartSession}"/>

        <Button Grid.Column="1"
                Height="36"
                MinWidth="90"
                Content="Next"
                Command="{Binding NextPhaseCommand}"
                IsEnabled="{Binding IsSessionRunning}"/>

        <Button Grid.Column="2"
                Height="36"
                MinWidth="90"
                Content="Stop"
                Command="{Binding StopSessionCommand}"
                IsEnabled="{Binding IsSessionRunning}"/>

        <Button Grid.Column="3"
                Height="36"
                MinWidth="110"
                Content="Remove"
                Command="{Binding RemoveExerciseCommand}"/>
      </Grid>
    </Border>

    <!-- =========================
         (Optional) Pause / Restart - disabled for MVP
         ========================= -->
    <!--
    <Border Padding="12" CornerRadius="10" BorderThickness="1">
      <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="8" HorizontalAlignment="Center">
        <Button Grid.Column="0"
                Height="36"
                MinWidth="110"
                Content="{Binding PauseResumeText}"
                Command="{Binding TogglePauseCommand}"
                IsEnabled="{Binding IsSessionRunning}"/>

        <Button Grid.Column="1"
                Height="36"
                MinWidth="140"
                Content="Restart Exercise"
                Command="{Binding RestartExerciseCommand}"
                IsEnabled="{Binding IsSessionRunning}"/>
      </Grid>
    </Border>
    -->

    <!-- Session Info -->
    <Border Padding="12"
            CornerRadius="10"
            BorderThickness="1">

      <StackPanel Spacing="6">

        <TextBlock Text="{Binding CurrentPhaseName}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="{Binding PhaseCounterText}"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="{Binding RemainingTimeText}"
                   FontSize="38"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="{Binding TotalDurationText}"
                   HorizontalAlignment="Center"/>
      </StackPanel>
    </Border>

    <!-- Exercise List -->
    <Border Padding="12"
            CornerRadius="10"
            BorderThickness="1">

      <StackPanel Spacing="10">

        <TextBlock Text="Exercises"
                   FontWeight="SemiBold"/>

        <ListBox ItemsSource="{Binding Phases}"
                 SelectedItem="{Binding SelectedExercise}"
                 Height="220">

          <ListBox.ItemTemplate>
            <DataTemplate>
              <Grid ColumnDefinitions="*,Auto"
                    ColumnSpacing="10">

                <TextBlock Grid.Column="0"
                           Text="{Binding Name}"
                           TextTrimming="CharacterEllipsis"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding DurationMinutes}"/>

              </Grid>
            </DataTemplate>
          </ListBox.ItemTemplate>

        </ListBox>

      </StackPanel>
    </Border>

    <!-- Status -->
    <TextBlock Text="{Binding StatusText}"
               Opacity="0.85"
               HorizontalAlignment="Center"/>

  </StackPanel>
</Window>

