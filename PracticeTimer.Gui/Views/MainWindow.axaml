<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PracticeTimer.Gui.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="PracticeTimer.Gui.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="PracticeTimer">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20"
                Spacing="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

        <!-- App title -->
        <TextBlock FontSize="24"
                   Text="PracticeTimer"
                   HorizontalAlignment="Center"/>

        <!-- =========================
             (Optional) Presets - disabled for MVP
             ========================= -->
        <!--
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Preset:" VerticalAlignment="Center"/>
            <ComboBox Width="200"
                      ItemsSource="{Binding PresetNames}"
                      SelectedItem="{Binding SelectedPresetName}" />
        </StackPanel>
        -->

        <!-- =========================
             Add Exercise
             ========================= -->
<Border Padding="12"
        CornerRadius="8"
        BorderThickness="1"
        HorizontalAlignment="Center">

    <Grid ColumnDefinitions="Auto,Auto,Auto"
          ColumnSpacing="8"
          VerticalAlignment="Center">

        <TextBox Grid.Column="0"
                 Width="220"
                 Height="36"
                 Watermark="Exercise name (e.g. Chords)"
                 Text="{Binding NewExerciseName, UpdateSourceTrigger=PropertyChanged}" />

        <TextBox Grid.Column="1"
                 Width="120"
                 Height="36"
                 Watermark="Minutes"
                 Text="{Binding NewExerciseMinutesText, UpdateSourceTrigger=PropertyChanged}" />

        <Button Grid.Column="2"
                Content="Add"
                Height="36"
                MinWidth="90"
                Command="{Binding AddExerciseCommand}" />

    </Grid>
</Border>


        <!-- =========================
             Action buttons (aligned)
             ========================= -->
        <Grid HorizontalAlignment="Center"
              ColumnDefinitions="Auto,Auto,Auto,Auto,Auto"
              ColumnSpacing="8">

            <Button Grid.Column="1"
                    Content="Start"
                    Height="36"
                    MinWidth="90"
                    Command="{Binding StartSessionCommand}"
                    IsEnabled="{Binding CanStartSession}" />

            <Button Grid.Column="2"
                    Content="Next"
                    Height="36"
                    MinWidth="90"
                    Command="{Binding NextPhaseCommand}"
                    IsEnabled="{Binding IsSessionRunning}" />

            <Button Grid.Column="3"
                    Content="Stop"
                    Height="36"
                    MinWidth="90"
                    Command="{Binding StopSessionCommand}"
                    IsEnabled="{Binding IsSessionRunning}" />

            <Button Grid.Column="4"
                    Content="Remove"
                    Height="36"
                    MinWidth="110"
                    Command="{Binding RemoveExerciseCommand}" />

        </Grid>

        <!-- =========================
             (Optional) Pause / Restart - disabled for MVP
             ========================= -->
        <!--
        <Grid HorizontalAlignment="Center" ColumnDefinitions="Auto,Auto" ColumnSpacing="8">
            <Button Content="{Binding PauseResumeText}"
                    Command="{Binding TogglePauseCommand}"
                    IsEnabled="{Binding IsSessionRunning}" />

            <Button Content="Restart Exercise"
                    Command="{Binding RestartExerciseCommand}"
                    IsEnabled="{Binding IsSessionRunning}" />
        </Grid>
        -->

        <!-- =========================
             Session info
             ========================= -->
        <TextBlock FontSize="18"
                   Text="{Binding CurrentPhaseName}"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="{Binding PhaseCounterText}"
                   HorizontalAlignment="Center"/>

        <TextBlock FontSize="36"
                   Text="{Binding RemainingTimeText}"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="{Binding TotalDurationText}"
                   HorizontalAlignment="Center"/>

        <!-- =========================
             Phase list
             ========================= -->
        <ListBox ItemsSource="{Binding Phases}"
                 SelectedItem="{Binding SelectedExercise}"
                 Width="380"
                 Height="220">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Name}" Width="240"/>
                        <TextBlock Text="{Binding DurationMinutes}"/>
                        <TextBlock Text=" min"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <!-- Status -->
        <TextBlock Text="{Binding StatusText}"
                   HorizontalAlignment="Center"/>

    </StackPanel>
</Window>

